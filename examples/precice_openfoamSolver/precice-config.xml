<?xml version="1.0"?>
<precice-configuration>
  <log>
    <sink
      filter="%Severity% > warning and %Rank% = 0"
      format="---[precice] %ColorizedSeverity% %Message%"
      enabled="true" />
  </log>

  <solver-interface dimensions="3">
    <data:scalar name="Temperature" />
    <data:scalar name="Heat-Flux" />

    <mesh name="Fluid-Mesh">
      <use-data name="Temperature" />
      <use-data name="Heat-Flux" />
    </mesh>

    <mesh name="Adapter-Mesh">
      <use-data name="Temperature" />
      <use-data name="Heat-Flux" />
    </mesh>

    <participant name="Fluid">
      <use-mesh name="Fluid-Mesh" provide="yes" />
      <use-mesh name="Adapter-Mesh" from="Adapter" />
      <read-data name="Heat-Flux" mesh="Fluid-Mesh" />
      <write-data name="Temperature" mesh="Fluid-Mesh" />
      <mapping:nearest-neighbor
        direction="read"
        from="Adapter-Mesh"
        to="Fluid-Mesh"
        constraint="consistent" />
    </participant>

    <participant name="Adapter">
      <use-mesh name="Fluid-Mesh" from="Fluid" />
      <use-mesh name="Adapter-Mesh" provide="yes" />
      <mapping:nearest-neighbor
        direction="read"
        from="Fluid-Mesh"
        to="Adapter-Mesh"
        constraint="consistent" />
      <read-data name="Temperature" mesh="Adapter-Mesh" />
      <write-data name="Heat-Flux" mesh="Adapter-Mesh" />
    </participant>

    <m2n:sockets from="Adapter" to="Fluid" exchange-directory="/data/ms2137/works/coupling_play/tests/rl_play/examples/exp2_flowHotPlate_foam/" />

    <coupling-scheme:serial-explicit>
      <max-time value="1.0" />
      <time-window-size value="0.1" valid-digits="8" />
      <participants first="Adapter" second="Fluid" />
      <exchange data="Temperature" mesh="Fluid-Mesh" from="Fluid" to="Adapter" initialize="true"/>
      <exchange data="Heat-Flux" mesh="Adapter-Mesh" from="Adapter" to="Fluid" />
    </coupling-scheme:serial-explicit>
  </solver-interface>
</precice-configuration>
