<?xml version="1.0"?>
<precice-configuration>
  <log>
    <sink
      filter="%Severity% > warning and %Rank% = 0"
      format="---[precice] %ColorizedSeverity% %Message%"
      enabled="true" />
  </log>

  <solver-interface dimensions="3" experimental="true">
    <data:scalar name="Pressure" />
    <data:vector name="Velocity" />

    <mesh name="Fluid-Mesh">
      <use-data name="Pressure" />
      <use-data name="Velocity" />
    </mesh>

    <participant name="Fluid">
      <use-mesh name="Fluid-Mesh" provide="yes" />
      <write-data name="Pressure" mesh="Fluid-Mesh" />
      <read-data name="Velocity" mesh="Fluid-Mesh" />
    </participant>

    <participant name="RL-Gym">
      <use-mesh name="Fluid-Mesh" from="Fluid" direct-access="true" safety-factor="0.0"/>
      <read-data name="Pressure" mesh="Fluid-Mesh" />
      <write-data name="Velocity" mesh="Fluid-Mesh" />
    </participant>

    <m2n:sockets from="RL-Gym" to="Fluid" exchange-directory="/data/ahmed/rl_play/examples/cylinder2D_openfoam/"/>

    <coupling-scheme:serial-explicit>
      <max-time value="0.0003" />
      <time-window-size value="0.0001" valid-digits="8" />
      <participants first="RL-Gym" second="Fluid" />
      <exchange data="Pressure" mesh="Fluid-Mesh" from="Fluid" to="RL-Gym" initialize="true"/>
      <exchange data="Velocity" mesh="Fluid-Mesh" from="RL-Gym" to="Fluid" />
    </coupling-scheme:serial-explicit>
  </solver-interface>
</precice-configuration>
