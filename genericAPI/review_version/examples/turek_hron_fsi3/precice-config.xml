<?xml version="1.0" ?>
<precice-configuration>
  <log>
    <sink
      filter="%Severity% > debug and %Rank% = 0"
      format="---[precice] %ColorizedSeverity% %Message%"
      enabled="true" />
  </log>

  <solver-interface dimensions="2">
    <data:vector name="Stress" />
    <data:vector name="Displacement" />
    <data:vector name="Velocity" />

    <mesh name="Fluid-Mesh-Flap-Centers">
      <use-data name="Stress" />
    </mesh>

    <mesh name="Fluid-Mesh-Flap-Nodes">
      <use-data name="Displacement" />
    </mesh>

    <mesh name="Solid-Mesh">
      <use-data name="Displacement" />
      <use-data name="Stress" />
    </mesh>

    <mesh name="Fluid-Mesh-Actuator-Centers">
      <use-data name="Velocity" />
    </mesh>

    <mesh name="RL-Mesh">
      <use-data name="Velocity" />
    </mesh>

    <participant name="Fluid">
      <use-mesh name="Fluid-Mesh-Flap-Nodes" provide="yes" />
      <use-mesh name="Fluid-Mesh-Flap-Centers" provide="yes" />
      <use-mesh name="Fluid-Mesh-Actuator-Centers" provide="yes" />
      <use-mesh name="Solid-Mesh" from="Solid" />
      <use-mesh name="RL-Mesh" from="RL" />
      <read-data name="Displacement" mesh="Fluid-Mesh-Flap-Nodes" />
      <read-data name="Velocity" mesh="Fluid-Mesh-Actuator-Centers" />
      <write-data name="Stress" mesh="Fluid-Mesh-Flap-Centers" />
      <mapping:rbf-thin-plate-splines
        direction="read"
        from="Solid-Mesh"
        to="Fluid-Mesh-Flap-Nodes"
        constraint="consistent" />
      <mapping:nearest-neighbor
        direction="read"
        from="RL-Mesh"
        to="Fluid-Mesh-Actuator-Centers"
        constraint="consistent" />
    </participant>

    <participant name="Solid">
      <use-mesh name="Solid-Mesh" provide="yes" />
      <use-mesh name="Fluid-Mesh-Flap-Centers" from="Fluid" />
      <read-data name="Stress" mesh="Solid-Mesh" />
      <write-data name="Displacement" mesh="Solid-Mesh" />
      <watch-point mesh="Solid-Mesh" name="Flap-Tip" coordinate="0.6;0.2" />
      <mapping:rbf-thin-plate-splines
        direction="read"
        from="Fluid-Mesh-Flap-Centers"
        to="Solid-Mesh"
        constraint="consistent" />
    </participant>

    <participant name="RL">
      <use-mesh name="RL-Mesh" provide="yes" />
      <use-mesh name="Fluid-Mesh-Actuator-Centers" from="Fluid"/>
      <write-data name="Velocity" mesh="RL-Mesh" />
    </participant>

    <m2n:sockets from="Fluid" to="Solid" exchange-directory="" />
    <m2n:sockets from="RL" to="Fluid" exchange-directory=""/>

    <coupling-scheme:multi>
      <time-window-size value="1e-3" />
      <max-time value="5" />
      <participant name="Fluid" control="yes" />
      <participant name="RL" />
      <participant name="Solid" />
      <exchange data="Velocity" mesh="RL-Mesh" from="RL" to="Fluid" />
      <exchange data="Stress" mesh="Fluid-Mesh-Flap-Centers" from="Fluid" to="Solid" />
      <exchange data="Displacement" mesh="Solid-Mesh" from="Solid" to="Fluid" />
      <max-iterations value="100" />
      <relative-convergence-measure limit="1e-4" data="Stress" mesh="Fluid-Mesh-Flap-Centers" />
      <relative-convergence-measure limit="1e-4" data="Displacement" mesh="Solid-Mesh" />
      <extrapolation-order value="2" />
      <acceleration:IQN-ILS>
        <data name="Displacement" mesh="Solid-Mesh" />
        <data name="Stress" mesh="Fluid-Mesh-Flap-Centers" />
        <data name="Velocity"  mesh="RL-Mesh" />
        <preconditioner type="residual-sum" />
        <filter type="QR2" limit="1.2e-3" />
        <initial-relaxation value="0.1" />
        <max-used-iterations value="60" />
        <time-windows-reused value="2" />
      </acceleration:IQN-ILS>
    </coupling-scheme:multi>

  </solver-interface>
</precice-configuration>
