<?xml version="1.0"?>
<precice-configuration>
  <log>
    <sink
      filter="%Severity% > warning and %Rank% = 0"
      format="---[precice] %ColorizedSeverity% %Message%"
      enabled="true" />
  </log>

  <solver-interface dimensions="3" experimental="true">

    <data:scalar name="Temperature" />
    <data:scalar name="Heat-Flux" />

    <mesh name="Fluid-Mesh">
      <use-data name="Temperature" />
      <use-data name="Heat-Flux" />
    </mesh>

    <participant name="Fluid">
      <use-mesh name="Fluid-Mesh" provide="yes" />
      <read-data name="Heat-Flux" mesh="Fluid-Mesh" />
      <write-data name="Temperature" mesh="Fluid-Mesh" />
    </participant>

    <participant name="RL-Gym">
      <use-mesh name="Fluid-Mesh" from="Fluid" direct-access="true" safety-factor="0.0"/>
      <read-data name="Temperature" mesh="Fluid-Mesh" />
      <write-data name="Heat-Flux" mesh="Fluid-Mesh" />
    </participant>

    <m2n:sockets from="RL-Gym" to="Fluid" exchange-directory="/tmp/"/>

    <coupling-scheme:serial-explicit>
      <max-time value="0.8" />
      <time-window-size value="0.1" valid-digits="8" />
      <participants first="RL-Gym" second="Fluid" />
      <exchange data="Temperature" mesh="Fluid-Mesh" from="Fluid" to="RL-Gym" initialize="true"/>
      <exchange data="Heat-Flux" mesh="Fluid-Mesh" from="RL-Gym" to="Fluid" />
    </coupling-scheme:serial-explicit>
  </solver-interface>
</precice-configuration>
